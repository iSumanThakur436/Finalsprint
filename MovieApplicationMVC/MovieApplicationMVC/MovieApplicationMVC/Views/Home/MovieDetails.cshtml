@model MovieApplicationMVC.Models.Movie

@{
    ViewBag.Title = "Movie Details";
}

<h2>Movie Details</h2>

<div>
    <h4>@Html.DisplayFor(model => model.Title)</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Synopsis</dt>
        <dd>@Html.DisplayFor(model => model.Synopsis)</dd>

        <dt>Genre</dt>
        <dd>@Html.DisplayFor(model => model.Genre)</dd>

        <dt>Language</dt>
        <dd>@Html.DisplayFor(model => model.Language)</dd>

        <dt>Release Date</dt>
        <dd>@Html.DisplayFor(model => model.ReleaseDate)</dd>
    </dl>
</div>

<p>
    @Html.ActionLink("Theaters List", "SelectLocation", "Home", new { movieId = Model.MovieId }, new { @class = "btn btn-primary" })

    @Html.ActionLink("Back to List", "Index", "Home")
</p>
