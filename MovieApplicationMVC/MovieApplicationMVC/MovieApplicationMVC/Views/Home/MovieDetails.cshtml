@model MovieApplicationMVC.Models.Movie

@{
    ViewBag.Title = "Movie Details";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Model.Title - Movie Details</title>

    <!-- Bootstrap & Fonts -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600;700&display=swap" rel="stylesheet">
    <style>
        /* General Styles */
        body {
            font-family: 'Montserrat', sans-serif;
            background: #ffffff;
            color: #000000;
            margin: 0;
            padding: 0;
            overflow-x: hidden;
        }

        a {
            text-decoration: none;
        }

        /* Hero Section */
        .hero {
            background: linear-gradient(to bottom, rgba(255, 255, 255, 0.7), #ffffff), url('@Model.Poster');
            background-size: cover;
            background-position: center;
            height: 600px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #000000;
            text-align: center;
        }

        .hero h1 {
            font-size: 3.5rem;
            font-weight: 700;
            text-transform: uppercase;
            margin-bottom: 20px;
            color: #000000;
        }

        .hero p {
            font-size: 1.2rem;
            margin-bottom: 30px;
        }

        .hero .btn-book {
            background-color: #000000;
            color: #ffffff;
            padding: 12px 30px;
            font-size: 1.1rem;
            font-weight: 600;
            border: none;
            border-radius: 50px;
            text-transform: uppercase;
            letter-spacing: 1px;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .hero .btn-book:hover {
            transform: scale(1.05);
            background-color: #333333;
        }

        /* Movie Details */
        .movie-details {
            display: flex;
            justify-content: center;
            align-items: flex-start;
            padding: 50px 10%;
            gap: 40px;
        }

        .poster img {
            width: 400px;
            border-radius: 15px;
            transition: transform 0.3s ease;
        }

        .poster img:hover {
            transform: scale(1.02);
        }

        .details h3 {
            font-size: 1.8rem;
            margin-bottom: 20px;
            color: #000000;
        }

        .details p {
            margin-bottom: 15px;
            font-size: 1rem;
            line-height: 1.6;
        }

        .details strong {
            color: #333333;
        }

        /* Trailer Section */
        .trailer {
            text-align: center;
            margin: 50px 0;
        }

        .trailer h3 {
            font-size: 2.5rem;
            color: #000000;
            margin-bottom: 30px;
        }

        .trailer iframe {
            width: 80%;
            max-width: 1000px;
            height: 500px;
            border-radius: 10px;
            border: 2px solid #000000;
        }

        /* Footer */
        footer {
            background: #f8f8f8;
            padding: 20px;
            color: #333333;
            text-align: center;
        }

        footer a {
            color: #000000;
            font-weight: 600;
            transition: color 0.3s ease;
        }

        footer a:hover {
            color: #555555;
        }
    </style>
</head>

<body>
    <!-- Hero Section -->
    <div class="hero">
        <div>
            <h1>@Model.Title</h1>
            <p>Experience the thrill in theaters on @Model.ReleaseDate.ToShortDateString()</p>
            @Html.ActionLink("Theaters List", "SelectLocation", "Home", new { movieId = Model.MovieId }, new { @class = "btn btn-primary" })
        </div>
    </div>

    <!-- Movie Details -->
    <div class="movie-details">
        <div class="poster">
            <img src="@Model.Poster" alt="@Model.Title Poster">
        </div>
        <div class="details">
            <h3>About the Movie</h3>
            <p><strong>Director:</strong> @Model.Director</p>
            <p><strong>Genre:</strong> @Model.Genre</p>
            <p><strong>Release Date:</strong> @Model.ReleaseDate.ToShortDateString()</p>
            <p><strong>Cast:</strong> @Model.Actor</p>
            @Html.ActionLink("Theaters List", "SelectLocation", "Home", new { movieId = Model.MovieId }, new { @class = "btn btn-primary" })
        </div>
    </div>

    <!-- Trailer Section -->
    @if (!string.IsNullOrEmpty(Model.Trailer))
    {
        var youtubeVideoId = Model.Trailer.Split(new[] { "v=" }, StringSplitOptions.None)[1];
        youtubeVideoId = youtubeVideoId.Contains("&") ? youtubeVideoId.Split('&')[0] : youtubeVideoId;
        <div class="trailer">
            <h3>Watch Trailer</h3>
            <iframe src="https://www.youtube.com/embed/@youtubeVideoId" frameborder="0" allowfullscreen></iframe>
        </div>
    }

    <!-- Footer -->
    <footer>
        <p>© 2024 MovieBooking. Designed with ❤️ by <a href="#">YourBrand</a></p>
    </footer>
</body>

</html>
