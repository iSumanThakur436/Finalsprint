@model List<MovieApplicationMVC.Models.Movie>
@{
    ViewBag.Title = "Movies";
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <title>@ViewBag.Title</title>
    <style>
        .movie-card img {
            height: 250px;
            object-fit: cover;
        }

        .carousel-item img {
            object-fit: cover;
            height: 100vh; /* Full viewport height */
        }

        .carousel-caption {
            bottom: 20%;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7);
        }

        .carousel-control-prev-icon,
        .carousel-control-next-icon {
            background-color: black; /* Adjust the control icon background for better visibility */
        }

        .navbar-search {
            background-color: transparent;
            border: none;
            box-shadow: none; /* Remove any default shadow */
        }

            /* Transparent input field inside the search bar */
            .navbar-search input {
                background-color: transparent;
                color: white;
                border: 1px solid white; /* White border for visibility */
            }


            /* Transparent search button */
            .navbar-search button {
                background-color: transparent;
                border: 1px solid white; /* White border for visibility */
                color: white;
            }

        .card {
            border: none;
            transition: transform 0.3s ease-in-out;
        }

            .card:hover {
                transform: translateY(-10px);
            }

        footer {
            background-color: #212529;
            color: white;
        }

        /* Make the navbar part of the carousel and fixed at the top */
        header {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            z-index: 10;
            background-color: transparent; /* Transparent background */
        }

        /* Add padding to avoid overlap between navbar and carousel */
        .carousel {
            position: relative;
            z-index: 0;
        }
    </style>
</head>
<body>
    <!-- Carousel Section with integrated Navbar -->
    <section class="carousel slide" id="movieCarousel" data-bs-ride="carousel">
        <!-- Navbar inside the Carousel -->
        <header class="py-3 shadow-sm">
            <div class="container d-flex justify-content-between align-items-center">
                <div class="d-flex align-items-center">

                    <h2 class="m-0 text-white">MovieApp</h2> <!-- Make the text white for visibility -->
                </div>
                <form class="d-flex w-50 navbar-search">
                    <input class="form-control me-2" type="search" placeholder="Search for Movies, Events, Plays..." aria-label="Search">
                    <button class="btn btn-outline-light" type="submit">Search</button> <!-- Make buttons light-colored -->
                </form>
                <div>
                    <button class="btn btn-link text-white">Pune</button>
                    <button class="btn btn-light">Sign In</button>
                </div>
            </div>
        </header>

        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="https://images3.alphacoders.com/136/1362151.jpeg" class="d-block w-100" alt="Movie Banner 1">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Mufasa: The King</h5>
                    <p>The wait is over. Watch Mufasa in theaters now!</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="https://i.ytimg.com/vi/g3JUbgOHgdw/maxresdefault.jpg" class="d-block w-100" alt="Movie Banner 2">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Pushpa 2 - Rule</h5>
                    <p>The wait is over. Watch Pushpa 2 in theaters now!</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="https://images.hdqwalls.com/wallpapers/moana-2-imax-poster-yc.jpg" class="d-block w-100" alt="Movie Banner 3">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Moana 2</h5>
                    <p>Catch live action and adrenaline-pumping matches.</p>
                </div>
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#movieCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#movieCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </section>

    <div class="container mt-5">
        <h2 class="text-center">Movies</h2>
        <hr />

        @if (Model != null && Model.Count > 0)
        {
            <div class="row">
                @foreach (var movie in Model)
                {
                    <div class="col-md-3 mb-4">
                        <div class="card">
                            <a href="@Url.Action("MovieDetails", "Home", new { id = movie.MovieId })">
                                <img class="card-img-top" src="@movie.Poster" alt="@movie.Title" style="height: 250px; object-fit: cover;" />
                            </a>


                            <div class="card-body">
                                <h5 class="card-title text-center">@movie.Title</h5>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="alert alert-warning text-center">
                No movies available to display.
            </div>
        }
    </div>
