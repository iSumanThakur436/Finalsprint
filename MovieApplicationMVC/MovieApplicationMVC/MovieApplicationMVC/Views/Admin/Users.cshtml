@model List<MovieApplicationMVC.Models.User>

@{
    Layout = null;
}

<h2>User List</h2>

<p>
    <a href="@Url.Action("AddUser", "Admin")" class="create-btn">Create New</a>
</p>

@if (Model == null || !Model.Any())
{
    <p>No users available.</p>
}
else
{
    <div class="table-container">
        <div class="table-wrapper">
            <table class="table">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.UserName</td>
                            <td>@user.Email</td>
                            <td>
                                <a href="@Url.Action("UpdateUser", "Admin", new { id = user.UserId })" class="btn-link">Edit</a> |
                                <a href="@Url.Action("UserDetails", "Admin", new { id = user.UserId })" class="btn-link">Details</a>

                                @*<a href="@Url.Action("DeleteUser", "Admin", new { id = user.UserId })" class="btn-link" onclick="return confirm('Are you sure you want to delete this user?');">Delete</a>*@
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}

<style>
    /* Centering the Table and Setting Maximum Width */
    .table-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
    }

    .table-wrapper {
        overflow-x: auto;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
        border-spacing: 0;
        margin: 0;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

        /* Table header styling */
        .table thead {
            background-color: #333;
            color: white;
        }

        .table th, .table td {
            padding: 10px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }



    .btn-link {
        color: #007bff;
        text-decoration: none;
    }

        .btn-link:hover {
            text-decoration: underline;
        }

    /* Handling no users available message */
    .table-container p {
        text-align: center;
        color: #888;
    }

    .create-btn {
        display: inline-block;
        background-color: #333;
        color: #fff;
        padding: 10px 15px;
        text-decoration: none;
        border-radius: 5px;
        margin-bottom: 20px;
    }

        .create-btn:hover {
            background-color: #555;
        }

    /* Media Queries */
    /* Mobile Devices (Portrait) */
    @@media (max-width: 767px) {
        .table-container {
            padding: 10px;
        }

        .table th, .table td {
            padding: 8px;
        }

        .table thead {
            font-size: 14px;
        }

        .table-wrapper {
            overflow-x: scroll;
        }

        .table td {
            display: block;
            width: 100%;
            box-sizing: border-box;
        }

            .table td:before {
                content: attr(data-label);
                font-weight: bold;
                display: block;
                margin-bottom: 5px;
            }

        .btn-link {
            font-size: 14px;
        }
    }

    /* Tablets */
    @@media (max-width: 1024px) {
        .table th, .table td {
            padding: 12px;
        }

        .table-wrapper {
            overflow-x: auto;
        }
    }

    /* Large Screens */
    @@media (min-width: 1200px) {
        .table-container {
            max-width: 100%;
            padding: 30px;
        }
    }
</style>
