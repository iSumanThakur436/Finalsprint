
@model IEnumerable<MovieApplicationMVC.Models.Movie>

@{
    ViewBag.Title = "MovieList";
    Layout = null;
}

<h2>Movie List</h2>

<p>
    <a href="@Url.Action("AddMovie", "Admin")" class="create-btn">Create New</a>
</p>

<div class="table-container">
    <div class="table-wrapper">
        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Title)</th>
                    <th>@Html.DisplayNameFor(model => model.Synopsis)</th>
                    <th>@Html.DisplayNameFor(model => model.Genre)</th>
                    <th>@Html.DisplayNameFor(model => model.Language)</th>
                    <th>@Html.DisplayNameFor(model => model.ReleaseDate)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Title)</td>
                        <td>@Html.DisplayFor(modelItem => item.Synopsis)</td>
                        <td>@Html.DisplayFor(modelItem => item.Genre)</td>
                        <td>@Html.DisplayFor(modelItem => item.Language)</td>
                        <td>@Html.DisplayFor(modelItem => item.ReleaseDate)</td>
                        <td>
                            <a href="@Url.Action("EditMovie", "Admin", new { id = item.MovieId })">Edit</a> |
                            <a href="@Url.Action("GetMovieDetails", "Admin", new { id = item.MovieId })">Details</a> |
                            <a href="@Url.Action("DeleteMovie", "Admin", new { id = item.MovieId })">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    /* Centering the Table and Setting Maximum Width */
    .table-container {
        max-width: 1200px;
        margin: 0 auto; /* Center the table */
        padding: 20px;
    }

    .table-wrapper {
        overflow-x: auto;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
        border-spacing: 0;
        margin: 0;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

        /* Table header styling */
        .table thead {
            background-color: #333;
            color: white;
        }

        .table th, .table td {
            padding: 10px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }



    .create-btn {
        display: inline-block;
        background-color: #333;
        color: #fff;
        padding: 10px 15px;
        text-decoration: none;
        border-radius: 5px;
        margin-bottom: 20px;
    }

        .create-btn:hover {
            background-color: #555;
        }

    /* Styling for actions column links */
    .table td a {
        color: #007bff;
        text-decoration: none;
        margin-right: 10px;
    }

        .table td a:hover {
            text-decoration: underline;
        }
</style>

