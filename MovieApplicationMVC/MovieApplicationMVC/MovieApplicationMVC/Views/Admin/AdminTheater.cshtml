@model IEnumerable<MovieApplicationMVC.Models.Theater>

@{
    ViewBag.Title = "AdminTheater";
    Layout = null;
}

<h2>Theater</h2>

<p>
    <a href="@Url.Action("AddTheater", "Admin")" class="create-btn">Create New</a>
</p>

<div class="table-container">
    <div class="table-wrapper">
        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.TheaterName)</th>
                    <th>@Html.DisplayNameFor(model => model.Location)</th>
                    <th>@Html.DisplayNameFor(model => model.SeatCount)</th>
                    <th>@Html.DisplayNameFor(model => model.TheaterType)</th>
                    <th>@Html.DisplayNameFor(model => model.City)</th>
                    <th>@Html.DisplayNameFor(model => model.TicketPrice)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.TheaterName)</td>
                        <td>@Html.DisplayFor(modelItem => item.Location)</td>
                        <td>@Html.DisplayFor(modelItem => item.SeatCount)</td>
                        <td>@Html.DisplayFor(modelItem => item.TheaterType)</td>
                        <td>@Html.DisplayFor(modelItem => item.City)</td>
                        <td>@Html.DisplayFor(modelItem => item.TicketPrice)</td>
                        <td>
                            <a href="@Url.Action("UpdateTheater", "Admin", new { id = item.TheaterId })">Edit</a> |
                            @*<a href="@Url.Action("Details", "Theater", new { id = item.TheaterId })">Details</a> |*@
                            <a href="@Url.Action("DeleteTheater", "Admin", new { id = item.TheaterId })">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    /* Centering the Table and Setting Maximum Width */
    .table-container {
        max-width: 1200px;
        margin: 0 auto; /* Center the table */
        padding: 20px;
    }

    .table-wrapper {
        overflow-x: auto;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
        border-spacing: 0;
        margin: 0;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

        /* Table header styling */
        .table thead {
            background-color: #333;
            color: white;
        }

        .table th, .table td {
            padding: 10px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }



    .create-btn {
        display: inline-block;
        background-color: #333;
        color: #fff;
        padding: 10px 15px;
        text-decoration: none;
        border-radius: 5px;
        margin-bottom: 20px;
    }

        .create-btn:hover {
            background-color: #555;
        }

    /* Styling for actions column links */
    .table td a {
        color: #007bff;
        text-decoration: none;
        margin-right: 10px;
    }

        .table td a:hover {
            text-decoration: underline;
        }
</style>
